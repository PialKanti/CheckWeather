<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weather.check.com.checkweather.WeatherShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/MainContent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/dayimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Dhaka,Bangladesh"
                android:textColor="@color/white_font"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/WeatherDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:text="Mostly Sunny"
                android:textColor="@color/white_font"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/CurrentWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IconImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/test" />

                <TextView
                    android:id="@+id/Temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="serif"
                    android:text="24 \u2103"
                    android:textColor="@color/white_font"
                    android:textSize="36sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#24292E"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <!--Shows Wind Speed and Humidity-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Wind Speed Starts-->
                <include
                    android:id="@+id/top_left"
                    layout="@layout/content_weather_show"></include>
                <!--Wind Speed Ends-->

                <!--Humidity Starts-->
                <include
                    android:id="@+id/top_right"
                    layout="@layout/content_weather_show"></include>
                <!--Humidity Ends-->

            </LinearLayout>
            <!--Wind Speed and Humidity Ends-->


            <!--Shows Sunrise and Sunset Time-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!--Sunrise Starts-->
                <include
                    android:id="@+id/bottom_left"
                    layout="@layout/content_weather_show"></include>
                <!--Sunrise Ends-->

                <!--Sunset Starts-->
                <include
                    android:id="@+id/bottom_right"
                    layout="@layout/content_weather_show"></include>
                <!--Sunset Ends-->
            </LinearLayout>
            <!--Sunrise and Sunset Time Ends-->


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#838D8F" />
            <!--Weather Forecast Starts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <include
                    android:id="@+id/Day1"
                    layout="@layout/forecast_weather_show"></include>

                <include
                    android:id="@+id/Day2"
                    layout="@layout/forecast_weather_show"></include>

                <include
                    android:id="@+id/Day3"
                    layout="@layout/forecast_weather_show"></include>

                <include
                    android:id="@+id/Day4"
                    layout="@layout/forecast_weather_show"></include>

                <include
                    android:id="@+id/Day5"
                    layout="@layout/forecast_weather_show"></include>
            </LinearLayout>
            <!--Weather Forecast Ends-->
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
